<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
    <Dialog title="Logon" id="ListDialog" afterClose="onAfterClose">
        <l:VerticalLayout class="">
            <l:HorizontalLayout class="sapUiSmallMarginBegin">
                <Label class="sapUiTinyMarginTop" text="User Name" labelFor="userField" width="5rem"/>
                <Input id="userField" editable="true"/>
            </l:HorizontalLayout>
            <l:HorizontalLayout class="sapUiSmallMarginBegin">
                <Label class="sapUiTinyMarginTop" text="Passsword" labelFor="pwdField" width="5rem" />
                <Input id="pwdField" type="Password" editable="true"/>
            </l:HorizontalLayout>
        </l:VerticalLayout>
        <beginButton>
            <Button text="Submit" press="onItemSelect" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelBlog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>